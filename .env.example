# 0x API Configuration
# Get your API key from https://dashboard.0x.org
ZEROEX_API_KEY=your_0x_api_key_here

# Private Keys (Required for executing transactions)
# EVM private key for Base transactions (hex format with 0x prefix)
EVM_PRIVATE_KEY=your_private_key_here

# Solana private key (base58 format)
SOLANA_PRIVATE_KEY=your_base58_solana_private_key_here

# Optional: Solana private key (base58 format) for custom gas payer
SOLANA_GAS_PAYER_PRIVATE_KEY=your_base58_solana_private_key_for_gas_payer_here

# Optional: Receiver Addresses (if different from sender)
# Solana address to receive tokens when swapping from EVM to Solana
SOLANA_RECEIVER_ADDRESS=your_base58_solana_pubkey_here

# EVM address to receive tokens when swapping from Solana to EVM
EVM_RECEIVER_ADDRESS=your_evm_address_here

# RPC URLs (Optional - defaults provided)
BASE_RPC_URL=https://mainnet.base.org
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com